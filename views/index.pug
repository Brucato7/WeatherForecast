				div.col-md-4(id="facebookDiv")
					h3 Facebook!
					div
						img(src="facebook.png",alt="Facebook Logo",height='150',width='150')

				div.col-md-4(id="typeItIn")
					h3 Typing it in!
					div
						img(src="typing.png",alt="Guy sitting at computer",height='150',width='150')

				div.col-md-4(id="geoLocate")
					h3 GeoLocation!
					div
						img(src="globePin.png",alt="Push-Pin in a globe",height='150',width='150')

		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js")
